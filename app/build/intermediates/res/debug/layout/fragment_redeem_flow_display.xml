<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_width"
    android:layout_height="@dimen/layout_height"
    android:background="@drawable/background">

    <include
        android:id="@+id/logo"
        layout="@layout/view_title_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_logo_layout"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/title_text"
        layout="@layout/view_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button"
        android:layout_below="@+id/title_text"
        android:layout_marginTop="@dimen/height_layout_top"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/flow_content_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="340px"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/flow_display_width"
                android:layout_height="@dimen/flow_display_heigh"
                android:layout_centerVertical="true"
                android:background="@drawable/redeem_1"
                android:padding="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20px"
                android:gravity="center_horizontal"
                android:text="@string/redeem_flow_display_1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/flow_content_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="340px"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/flow_display_width"
                android:layout_height="@dimen/flow_display_heigh"
                android:layout_centerVertical="true"
                android:background="@drawable/sell_4"
                android:padding="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20px"
                android:gravity="center_horizontal"
                android:text="@string/redeem_flow_display_2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/bottom_button"
        layout="@layout/view_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_button_layout"
        android:layout_above="@+id/bottom_text" />

    <include
        android:id="@+id/bottom_text"
        layout="@layout/view_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_text_layout"
        android:layout_alignParentBottom="true" />

</RelativeLayout><!-- From: file:/D:/Code/dtm0cean/app/src/main/res/layout/fragment_redeem_flow_display.xml -->